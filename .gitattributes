# .gitattributes

# Set default behavior to automatically normalize line endings
* text=auto

# Explicitly set text files to use LF (good for code files)
*.py text eol=lf
*.md text eol=lf
*.sh text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf

# Windows-specific files (if needed) can be CRLF
*.bat text eol=crlf
*.ps1 text eol=crlf
